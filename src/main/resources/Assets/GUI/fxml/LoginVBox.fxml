<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.geometry.Insets?>
<fx:root type="javafx.scene.layout.VBox" xmlns:fx="http://javafx.com/fxml" prefHeight="400.0" prefWidth="600.0">
    <ImageView>
        <image>
            <Image url="/Assets/GUI/Icons/Logo.png"/>
        </image>
    </ImageView>
    <Label text="Username: " />
    <TextField fx:id="usernameField" prefWidth="128.0" promptText="Waiting for username">
        <VBox.margin>
            <Insets bottom="5.0" top="5.0" />
        </VBox.margin>
    </TextField>
    <Label text="Ip: " />
    <TextField fx:id="ipField" prefWidth="128.0" promptText="Server ip (local or empty for default localhost)">
        <VBox.margin>
            <Insets bottom="5.0" top="5.0" />
        </VBox.margin>
    </TextField>
    <Label text="Port: " />
    <TextField fx:id="portField" prefWidth="128.0" promptText="Server port (local or empty for default 50033)">
        <VBox.margin>
            <Insets bottom="5.0" top="5.0" />
        </VBox.margin>
    </TextField>
    <Button fx:id="joinButton" alignment="BASELINE_RIGHT" text="Join" />
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
</fx:root>
