<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import it.polimi.softeng.network.client.view.FXML_Controllers.*?>
<?import javafx.geometry.Insets?>

<fx:root type="javafx.scene.layout.BorderPane" prefHeight="800.0" prefWidth="1200.0" maxWidth="-Infinity" maxHeight="-Infinity" style="-fx-background-color: #6161bd" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml">
    <center>
        <GridPane fx:id="tiles" maxHeight="600.0" maxWidth="600.0" minHeight="200.0" minWidth="400.0" prefHeight="400.0" prefWidth="400.0" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets top="20.0" bottom="20" right="20" left="20"/>
            </BorderPane.margin>
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="50.0" percentWidth="25.0" prefWidth="150.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="50.0" percentWidth="25.0" prefWidth="150.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="50.0" percentWidth="25.0" prefWidth="150.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="50.0" percentWidth="25.0" prefWidth="150.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="50.0" percentHeight="25.0" prefHeight="150.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="50.0" percentHeight="25.0" prefHeight="150.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="50.0" percentHeight="25.0" prefHeight="150.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="50.0" percentHeight="25.0" prefHeight="150.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <IslandPane fx:id="Island_1" img-src="Island_1.png" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <IslandPane fx:id="Island_2" img-src="Island_2.png" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <IslandPane fx:id="Island_3" img-src="Island_3.png" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
            <IslandPane fx:id="Island_4" img-src="Island_1.png" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
            <IslandPane fx:id="Island_5" img-src="Island_2.png" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
            <IslandPane fx:id="Island_6" img-src="Island_3.png" GridPane.columnIndex="2" GridPane.rowIndex="3" />
            <IslandPane fx:id="Island_7" img-src="Island_1.png" GridPane.columnIndex="3" GridPane.rowIndex="3" />
            <IslandPane fx:id="Island_8" img-src="Island_2.png" GridPane.columnIndex="3" GridPane.rowIndex="2" />
            <IslandPane fx:id="Island_9" img-src="Island_3.png" GridPane.columnIndex="3" GridPane.rowIndex="1" />
            <IslandPane fx:id="Island_10" img-src="Island_1.png" GridPane.columnIndex="3" GridPane.rowIndex="0" />
            <IslandPane fx:id="Island_11" img-src="Island_2.png" GridPane.columnIndex="2" GridPane.rowIndex="0" />
            <IslandPane fx:id="Island_12" img-src="Island_3.png" GridPane.columnIndex="1" GridPane.rowIndex="0" />
            <CloudPane fx:id="Cloud_1" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <CloudPane fx:id="Cloud_2" GridPane.columnIndex="2" GridPane.rowIndex="2" />
            <CloudPane fx:id="Cloud_3" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <CloudPane fx:id="Cloud_4" GridPane.columnIndex="2" GridPane.rowIndex="1" />
        </GridPane>
    </center>
    <left>
        <VBox fx:id="leftPlayer" alignment="CENTER_LEFT" maxWidth="200" prefHeight="300" style="-fx-background-color: grey">
            <BoardPane fx:id="leftBoard" visible="false" managed="false"/>
        </VBox>
    </left>
    <right>
        <VBox fx:id="rightPlayer" alignment="CENTER_RIGHT" maxWidth="200.0" prefHeight="300" style="-fx-background-color: grey">
            <BoardPane fx:id="rightBoard" visible="false" managed="false"/>
        </VBox>
    </right>
    <top>
        <BorderPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <center>
                <VBox fx:id="oppositePlayer" prefHeight="200.0" prefWidth="300.0" style="-fx-background-color: grey">
                    <BoardPane fx:id="oppositeBoard" visible="false" managed="false"/>
                </VBox>
            </center>
            <left>
                <VBox alignment="BOTTOM_CENTER" minWidth="200.0" prefHeight="200.0" prefWidth="300.0" BorderPane.alignment="CENTER">
                    <ScrollPane minWidth="200.0" prefHeight="180.0" prefWidth="300.0">
                        <content>
                            <VBox fx:id="gameChat" minHeight="180.0" minWidth="180.0" prefHeight="200.0" prefWidth="300.0"/>
                        </content>
                    </ScrollPane>
                    <HBox minWidth="200" minHeight="20" prefWidth="300" prefHeight="20">
                        <ChoiceBox fx:id="chatPartners" prefWidth="20"/>
                        <TextField fx:id="chatField" minWidth="180" prefWidth="280"/>
                    </HBox>
                </VBox>
            </left>
            <right>
                <VBox fx:id="turnState" minWidth="200.0" prefHeight="200.0" prefWidth="400.0" BorderPane.alignment="CENTER">
                    <Label fx:id="currentPhase" text="Current phase:"/>
                    <Label fx:id="currentPlayer" text="Current player:"/>
                </VBox>
            </right>
        </BorderPane>
    </top>
    <bottom>
        <HBox alignment="CENTER">
            <VBox fx:id="you" alignment="CENTER" minHeight="200.0" minWidth="200.0" prefHeight="400.0" prefWidth="400.0" BorderPane.alignment="CENTER" >
                <BoardPane fx:id="yourBoard"/>
                <Button fx:id="toggleHandButton" mnemonicParsing="false" text="Show/hide hand" />
                <ToolBar fx:id="assistantCards" minHeight="80" minWidth="60" maxHeight="80" maxWidth="600" nodeOrientation="LEFT_TO_RIGHT" style="-fx-background-color: BLACK;" />
            </VBox>
            <VBox alignment="CENTER" AnchorPane.leftAnchor="20">
                <Label fx:id="coins" text="0" prefWidth="100" prefHeight="100" style="-fx-background-image: url('/Assets/GUI/Icons/Coin.png');-fx-background-size: cover"/>
                <ImageView fx:id="bag" fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER" >
                    <Image url="/Assets/GUI/Icons/Bag.png"/>
                </ImageView>
            </VBox>
            <GridPane fx:id="characterCards" AnchorPane.rightAnchor="0">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                </rowConstraints>
            </GridPane>
        </HBox>
    </bottom>
</fx:root>
