<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import it.polimi.softeng.network.client.view.FXML_Controllers.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<fx:root type="javafx.scene.layout.AnchorPane" prefHeight="800.0" prefWidth="1200.0" style="-fx-background-color: #6161bd" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml">
    <VBox>
        <VBox fx:id="oppositePlayer" AnchorPane.topAnchor="0"/>
        <HBox alignment="CENTER">
            <VBox fx:id="leftPlayer" AnchorPane.leftAnchor="0"/>
