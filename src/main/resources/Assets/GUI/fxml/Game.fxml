                <IslandPane fx:id="Island_1" img-src="Island_1.png" GridPane.columnIndex="0" GridPane.rowIndex="0" prefHeight="100" prefWidth="100"/>
                <IslandPane fx:id="Island_2" img-src="Island_2.png" GridPane.columnIndex="0" GridPane.rowIndex="1" prefHeight="100" prefWidth="100"/>
                <IslandPane fx:id="Island_3" img-src="Island_3.png" GridPane.columnIndex="0" GridPane.rowIndex="2" prefHeight="100" prefWidth="100"/>
                <IslandPane fx:id="Island_4" img-src="Island_1.png" GridPane.columnIndex="0" GridPane.rowIndex="3" prefHeight="100" prefWidth="100"/>
                <IslandPane fx:id="Island_5" img-src="Island_2.png" GridPane.columnIndex="1" GridPane.rowIndex="3" prefHeight="100" prefWidth="100"/>
                <IslandPane fx:id="Island_6" img-src="Island_3.png" GridPane.columnIndex="2" GridPane.rowIndex="3" prefHeight="100" prefWidth="100"/>
                <IslandPane fx:id="Island_7" img-src="Island_1.png" GridPane.columnIndex="3" GridPane.rowIndex="3" prefHeight="100" prefWidth="100"/>
                <IslandPane fx:id="Island_8" img-src="Island_2.png" GridPane.columnIndex="3" GridPane.rowIndex="2" prefHeight="100" prefWidth="100"/>
                <IslandPane fx:id="Island_9" img-src="Island_3.png" GridPane.columnIndex="3" GridPane.rowIndex="1" prefHeight="100" prefWidth="100"/>
                <IslandPane fx:id="Island_10" img-src="Island_1.png" GridPane.columnIndex="3" GridPane.rowIndex="0" prefHeight="100" prefWidth="100"/>
                <IslandPane fx:id="Island_11" img-src="Island_2.png" GridPane.columnIndex="2" GridPane.rowIndex="0" prefHeight="100" prefWidth="100"/>
                <IslandPane fx:id="Island_12" img-src="Island_3.png" GridPane.columnIndex="1" GridPane.rowIndex="0" prefHeight="100" prefWidth="100"/>
                <CloudPane fx:id="Cloud_1" GridPane.columnIndex="1" GridPane.rowIndex="1" prefHeight="100" prefWidth="100"/>
                <CloudPane fx:id="Cloud_2" GridPane.columnIndex="2" GridPane.rowIndex="2" prefHeight="100" prefWidth="100"/>
                <CloudPane fx:id="Cloud_3" GridPane.columnIndex="1" GridPane.rowIndex="2" prefHeight="100" prefWidth="100"/>
                <CloudPane fx:id="Cloud_4" GridPane.columnIndex="2" GridPane.rowIndex="1" prefHeight="100" prefWidth="100"/>
            </GridPane>
            <VBox fx:id="rightPlayer" AnchorPane.rightAnchor="0"/>
        </HBox>
        <HBox>
            <ScrollPane prefWidth="200" prefHeight="200" AnchorPane.leftAnchor="0" AnchorPane.bottomAnchor="0">
                <VBox fx:id="gameChat"/>
            </ScrollPane>
            <VBox fx:id="you" AnchorPane.bottomAnchor="0" AnchorPane.rightAnchor="200" AnchorPane.leftAnchor="200">
                <AnchorPane fx:id="schoolBoard"/>

                <Button fx:id="toggleHandButton" mnemonicParsing="false" text="Show/hide hand" />
                <ToolBar fx:id="assistantCards" minHeight="80" minWidth="60" maxHeight="80" maxWidth="600" nodeOrientation="LEFT_TO_RIGHT" style="-fx-background-color: BLACK;" />
            </VBox>
            <VBox fx:id="extraInfo">
                <Label fx:id="currentPhase" style="-fx-background-color: white" />
                <Label fx:id="currentPlayer" style="-fx-background-color: white" />
                <ImageView fx:id="bag">
                    <image>
                        <Image url="/Assets/GUI/Icons/Bag.png"/>
                    </image>
                </ImageView>
                <Label fx:id="coins" style="-fx-background-image: url('/Assets/GUI/Icons/Coin.png')"/>
                <VBox fx:id="characterCards"/>
            </VBox>
        </HBox>
    </VBox>







</fx:root>
