<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<VBox prefHeight="100.0" prefWidth="200.0" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="it.polimi.softeng.network.client.view.GUI">
    <children>
        <Label fx:id="label" text="Input"/>
        <TextField fx:id="textField" onAction="#saveAndClear" prefWidth="128.0" promptText="Waiting for text">
            <VBox.margin>
                <Insets bottom="5.0" top="5.0"/>
            </VBox.margin>
        </TextField>
        <Button fx:id="button" onAction="#closeApp" text="Close Eriantys">

        </Button>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
</VBox>