<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<VBox prefHeight="100.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <Label text="Username: "/>
    <TextField fx:id="usernameField" prefWidth="128.0" promptText="Waiting for username">
        <VBox.margin>
            <Insets bottom="5.0" top="5.0"/>
        </VBox.margin>
    </TextField>
    <Label text="Ip: "/>
    <TextField fx:id="ipField" prefWidth="128.0" promptText="Server ip (local or empty for default localhost)">
        <VBox.margin>
            <Insets bottom="5.0" top="5.0"/>
        </VBox.margin>
    </TextField>
    <Label text="Port: "/>
    <TextField fx:id="portField" prefWidth="128.0" promptText="Server port (local or empty for default 50033)">
        <VBox.margin>
            <Insets bottom="5.0" top="5.0"/>
        </VBox.margin>
    </TextField>

    <Button fx:id="button" text="Close Eriantys" alignment="BASELINE_RIGHT">

    </Button>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
</VBox>